<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C8C7CB"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_margin="4dp"
                android:background="@drawable/layout_bg"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textAlignment="center"
                    android:text="Event Registration"
                    android:textSize="30sp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="354dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="10dp"
                    android:text="Home/Forms/event registration"
                    android:textAlignment="center"
                    android:textColor="#2E2E2F"
                    android:textSize="19sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/down_bg"
                android:orientation="vertical"
                android:layout_margin="6dp">



                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"

                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:padding="4dp"
                        android:text="FirstName"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="#0D0D0D" />


                    <TextView
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:padding="4dp"
                        android:text="LastName"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="#0D0D0D" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"

                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txtfirstname"
                        android:layout_width="157dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:background="@drawable/textview_bg"
                        android:hint="FirstName"
                        android:textColor="@color/white"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColorHint="#CACFD2" />


                    <EditText
                        android:id="@+id/txtlastname"
                        android:layout_width="166dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/textview_bg"
                        android:hint="LastName"
                        android:textColor="@color/white"
                        android:padding="4dp"
                        android:textAlignment="center"
                        android:textColorHint="#CACFD2" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="82dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:text="Email"
                        android:textAlignment="textStart"
                        android:textColor="#0D0D0D"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="340dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/textview_bg"
                        android:hint="Enter Email Address"
                        android:padding="4dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textColorHint="#CACFD2"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="82dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:text="Phone Number"
                        android:textAlignment="textStart"
                        android:textColor="#0D0D0D"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/phonenumber"
                        android:layout_width="340dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/textview_bg"
                        android:hint="Enter phone number"
                        android:padding="4dp"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textColorHint="#CACFD2"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="82dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:text="Gender:"
                        android:textAlignment="textStart"
                        android:textColor="#0D0D0D"
                        android:textSize="16sp" />


                    <RadioGroup
                        android:id="@+id/radiogroup"
                        android:layout_width="340dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">


                        <RadioButton
                            android:layout_width="135dp"
                            android:layout_height="33dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/textview_bg"
                            android:padding="4dp"
                            android:textSize="16sp"
                            android:text="Female"
                            android:textColor="@color/white" />


                        <RadioButton
                            android:layout_width="123dp"
                            android:layout_height="33dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/textview_bg"
                            android:padding="4dp"
                            android:textSize="16sp"
                            android:text="Male"
                            android:textColor="@color/white" />


                    </RadioGroup>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="183dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:text="Interests:"
                        android:textAlignment="textStart"
                        android:textColor="#0D0D0D"
                        android:textSize="16sp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/choice_bg"
                            android:clickable="true"
                            android:padding="4dp"
                            android:text="UI/UX Design"
                            android:textSize="16sp"
                            android:textColor="#0D0D0D"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/choice_bg"
                            android:padding="4dp"
                            android:text="Backend Development"
                            android:textSize="16sp"
                            android:textColor="#0D0D0D"
                            android:textAlignment="center" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/text3"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/choice_bg"
                            android:clickable="true"
                            android:padding="4dp"
                            android:text="VFX Animations"
                            android:textColor="#0D0D0D"
                            android:textSize="16sp"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/text4"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/choice_bg"
                            android:padding="4dp"
                            android:clickable="true"
                            android:text="Videography"
                            android:textColor="#0D0D0D"
                            android:textSize="16sp"
                            android:textAlignment="center" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:padding="4dp">

                        <TextView
                            android:id="@+id/text5"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:clickable="true"
                            android:background="@drawable/choice_bg"
                            android:padding="4dp"
                            android:text="Prototyping"
                            android:textColor="#0D0D0D"
                            android:textSize="16sp"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/text6"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/choice_bg"
                            android:padding="4dp"
                            android:clickable="true"
                            android:textSize="16sp"
                            android:text="Figma"
                            android:textColor="#0D0D0D"
                            android:textAlignment="center" />

                        <TextView
                            android:id="@+id/text7"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/choice_bg"
                            android:padding="4dp"
                            android:text="Others"
                            android:clickable="true"
                            android:textSize="16sp"
                            android:textColor="#0D0D0D"
                            android:textAlignment="center" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="82dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:text="Website:"
                        android:textAlignment="textStart"
                        android:textColor="#0D0D0D"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/txtwebsite"
                        android:layout_width="340dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/textview_bg"
                        android:hint="https://"
                        android:textColor="@color/white"
                        android:padding="4dp"
                        android:textColorHint="#CACFD2" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="177dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:text="Bio"
                        android:textAlignment="textStart"
                        android:textColor="#0D0D0D"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/txtbio"
                        android:layout_width="340dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/splash_bg"
                        android:padding="4dp"
                        android:text=""
                        android:textColor="@color/black" />

                </LinearLayout>




                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"

                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:padding="4dp"
                        android:text="Social media handles:"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="#0D0D0D" />





                </LinearLayout>


                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"

                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txtgithub"
                        android:layout_width="167dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="25dp"
                        android:background="@drawable/textview_bg"
                        android:hint="Github/"
                        android:textColor="@color/white"
                        android:padding="4dp"
                        android:textColorHint="#CACFD2" />


                    <EditText
                        android:id="@+id/txttwitter"
                        android:layout_width="166dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/textview_bg"
                        android:hint="Twitter/"
                        android:textColor="@color/white"
                        android:padding="4dp"
                        android:textColorHint="#CACFD2" />


                </LinearLayout>



                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="82dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="136dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:text="Event passes:"
                        android:textAlignment="textStart"
                        android:textColor="#0D0D0D"
                        android:textSize="16sp" />

                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="291dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/custom_spinner"
                        android:padding="4dp"
                        android:textColorHint="@color/white"
                        android:textSize="16sp" />








                </LinearLayout>



                <LinearLayout
                    android:layout_width="391dp"
                    android:layout_height="82dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:padding="4dp"
                        android:text="How did you hear about the Event?"
                        android:textAlignment="textStart"
                        android:textColor="#0D0D0D"
                        android:textSize="16sp" />


                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/custom_spinner"
                        android:padding="4dp"
                        android:textColorHint="@color/white"
                        android:textSize="16sp" />


                </LinearLayout>






            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="4dp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/signing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/loginbutton"
                    android:padding="6dp"
                    android:text="Register"
                    android:textColor="#0D0D0D"
                    android:textSize="16sp" />


            </LinearLayout>


        </LinearLayout>










    </ScrollView>


</LinearLayout>